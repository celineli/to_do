{% extends 'base.html.twig' %}

{% block body %}

  <div class="container">
    <div class="row box">

      <h1>Priority</h1>

      <table class="table table-hover">
          <tbody>
              <tr>
                  <th>Name</th>
                  <td>{{ priority.name }}</td>
              </tr>
              <tr>
                  <th>Weight</th>
                  <td>{{ priority.weight }}</td>
              </tr>
          </tbody>
      </table>

      <div>
        <a href="{{ path('priority_index') }}">< Back to the list</a>

        {{ form_start(delete_form) }}
            <input class="btn btn-danger pull-right" type="submit" value="Delete">
        {{ form_end(delete_form) }}
        <a class="btn btn-primary pull-right" href="{{ path('priority_edit', { 'id': priority.id }) }}" role="button">Edit</a>
      </div>

    </div>
  </div>
{% endblock %}
